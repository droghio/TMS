maxx = 2
maxy = 0
maxz = 0

currentx = 0
currenty = 0
currentz = 1

dir = 0

while currentz < maxz do
	while currenty < maxy do
		while (currentx < maxx) do
			currentx = currentx + 1
            --Move in X dir.
			turtle.dig()
			turtle.forward()
		end

        --If this isn't the last block in our level.
        if (currenty < maxy) then
            --Move in Y dir.
            if (dir == 0) then
                turtle.turnLeft()
                turtle.dig()
                turtle.forward()
                turtle.turnLeft()

            else
                turtle.turnRight()
                turtle.dig()
                turtle.forward()
                turtle.turnRight()
            end
        end

        --Prepare for next column.
        dir = (dir+1)%2
        currentx = 1;
        currenty = currenty + 1
	end

    --Move in Z dir.
	turtle.digUp()
	turtle.up()
	turtle.turnLeft()
	turtle.turnLeft()
    currenty = 1;
    currentz = currentz + 1
end